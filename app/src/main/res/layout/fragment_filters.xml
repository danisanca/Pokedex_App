<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bottomSheetLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.FiltersFragment">

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/style_rounded_details"
    android:paddingTop="32dp"
    android:paddingStart="32dp"
    android:paddingBottom="32dp">

    <TextView
        android:id="@+id/text_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Filters"
        android:textStyle="bold"
        android:textSize="26sp"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_sub_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Use advanced search to explore PokÃ©mon by type, weakness, height and more!"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_title" />


    <TextView
        android:id="@+id/text_type"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Type"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:layout_marginTop="35dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_sub_title" />

    <HorizontalScrollView
        android:id="@+id/scroll_list_type"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="@+id/text_type"
        app:layout_constraintTop_toBottomOf="@+id/text_type"
        app:layout_constraintEnd_toEndOf="parent">

    <LinearLayout
        android:id="@+id/line_list_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">



        <ImageView
            android:id="@+id/img_ic_bug"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="15dp"
            android:layout_marginEnd="4dp"
            android:backgroundTint="@color/white"
            android:background="@drawable/bkg_style_circle"
            android:src="@drawable/ic_bug"
            app:tint="@color/typeBug"/>

        <ImageView
            android:id="@+id/img_ic_dark"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="15dp"
            android:layout_marginEnd="4dp"
            android:backgroundTint="@color/white"
            android:background="@drawable/bkg_style_circle"
            android:src="@drawable/ic_dark"
            app:tint="@color/typeDark"
            />

        <ImageView
            android:id="@+id/img_ic_dragon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginEnd="4dp"
            android:background="@drawable/bkg_style_circle"
            android:backgroundTint="@color/white"
            android:padding="15dp"
            android:src="@drawable/ic_dragon"
            app:tint="@color/typeDragon" />

        <ImageView
            android:id="@+id/img_ic_electric"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="15dp"
            android:layout_marginEnd="4dp"
            android:backgroundTint="@color/white"
            android:background="@drawable/bkg_style_circle"
            android:src="@drawable/ic_electric"
            app:tint="@color/typeElectric"
            />
        <ImageView
            android:id="@+id/img_ic_fairy"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="15dp"
            android:layout_marginEnd="4dp"
            android:backgroundTint="@color/white"
            android:background="@drawable/bkg_style_circle"
            android:src="@drawable/ic_fairy"
            app:tint="@color/typeFairy"
            />
        <ImageView
            android:id="@+id/img_ic_fighting"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="15dp"
            android:layout_marginEnd="4dp"
            android:backgroundTint="@color/white"
            android:background="@drawable/bkg_style_circle"
            android:src="@drawable/ic_fighting"
            app:tint="@color/typeFighting"
            />
        <ImageView
            android:id="@+id/img_ic_fire"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="15dp"
            android:layout_marginEnd="4dp"
            android:backgroundTint="@color/white"
            android:background="@drawable/bkg_style_circle"
            android:src="@drawable/ic_fire"
            app:tint="@color/typeFire"
            />
        <ImageView
            android:id="@+id/img_ic_flying"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="15dp"
            android:layout_marginEnd="4dp"
            android:backgroundTint="@color/white"
            android:background="@drawable/bkg_style_circle"
            android:src="@drawable/ic_flying"
            app:tint="@color/typeFlying"
            />
        <ImageView
            android:id="@+id/img_ic_ghost"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="15dp"
            android:layout_marginEnd="4dp"
            android:backgroundTint="@color/white"
            android:background="@drawable/bkg_style_circle"
            android:src="@drawable/ic_ghost"
            app:tint="@color/typeGhost"
            />

        <ImageView
            android:id="@+id/img_ic_grass"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="15dp"
            android:layout_marginEnd="4dp"
            android:backgroundTint="@color/white"
            android:background="@drawable/bkg_style_circle"
            android:src="@drawable/ic_grass"
            app:tint="@color/typeGrass"
            />
        <ImageView
            android:id="@+id/img_ic_ground"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="15dp"
            android:layout_marginEnd="4dp"
            android:backgroundTint="@color/white"
            android:background="@drawable/bkg_style_circle"
            android:src="@drawable/ic_ground"
            app:tint="@color/typeGround"
            />
        <ImageView
            android:id="@+id/img_ic_ice"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="15dp"
            android:layout_marginEnd="4dp"
            android:backgroundTint="@color/white"
            android:background="@drawable/bkg_style_circle"
            android:src="@drawable/ic_ice"
            app:tint="@color/typeIce"
            />
        <ImageView
            android:id="@+id/img_ic_normal"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="15dp"
            android:layout_marginEnd="4dp"
            android:backgroundTint="@color/white"
            android:background="@drawable/bkg_style_circle"
            android:src="@drawable/ic_normal"
            app:tint="@color/typeNormal"
            />
        <ImageView
            android:id="@+id/img_ic_poison"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="15dp"
            android:layout_marginEnd="4dp"
            android:backgroundTint="@color/white"
            android:background="@drawable/bkg_style_circle"
            android:src="@drawable/ic_poison"
            app:tint="@color/typePoison"
            />
        <ImageView
            android:id="@+id/img_ic_psychic"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="15dp"
            android:layout_marginEnd="4dp"
            android:backgroundTint="@color/white"
            android:background="@drawable/bkg_style_circle"
            android:src="@drawable/ic_psychic"
            app:tint="@color/typePsychic"
            />
        <ImageView
            android:id="@+id/img_ic_rock"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="15dp"
            android:layout_marginEnd="4dp"
            android:backgroundTint="@color/white"
            android:background="@drawable/bkg_style_circle"
            android:src="@drawable/ic_rock"
            app:tint="@color/typeRock"
            />
        <ImageView
            android:id="@+id/img_ic_steel"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="15dp"
            android:layout_marginEnd="4dp"
            android:backgroundTint="@color/white"
            android:background="@drawable/bkg_style_circle"
            android:src="@drawable/ic_steel"
            app:tint="@color/typeSteel"
            />
        <ImageView
            android:id="@+id/img_ic_water"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="15dp"
            android:layout_marginEnd="4dp"
            android:backgroundTint="@color/white"
            android:background="@drawable/bkg_style_circle"
            android:src="@drawable/ic_water"
            app:tint="@color/typeWater"
            />

    </LinearLayout>
    </HorizontalScrollView>
    <TextView
        android:id="@+id/text_height"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Heights"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:layout_marginTop="35dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scroll_list_type" />

    <LinearLayout
        android:id="@+id/line_list_height"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="@+id/text_height"
        app:layout_constraintTop_toBottomOf="@+id/text_height">

        <ImageView
            android:id="@+id/img_ic_short"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="15dp"
            android:layout_marginEnd="4dp"
            android:backgroundTint="@color/white"
            android:background="@drawable/bkg_style_circle"
            android:src="@drawable/ic_short_hei"
            app:tint="@color/heightShort"
            />
        <ImageView
            android:id="@+id/img_ic_medium"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="15dp"
            android:layout_marginEnd="4dp"
            android:backgroundTint="@color/white"
            android:background="@drawable/bkg_style_circle"
            android:src="@drawable/ic_medium_hei"
            app:tint="@color/heightMedium"
            />
        <ImageView
            android:id="@+id/img_ic_tall"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="15dp"
            android:layout_marginEnd="4dp"
            android:backgroundTint="@color/white"
            android:background="@drawable/bkg_style_circle"
            android:src="@drawable/ic_tall_hei"
            app:tint="@color/heightTall"
            />

    </LinearLayout>

    <TextView
        android:id="@+id/text_weights"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Weights"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:layout_marginTop="35dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/line_list_height" />

    <LinearLayout
        android:id="@+id/line_list_weights"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="@+id/text_weights"
        app:layout_constraintTop_toBottomOf="@+id/text_weights">

        <ImageView
            android:id="@+id/img_ic_light_wei"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="15dp"
            android:layout_marginEnd="4dp"
            android:backgroundTint="@color/white"
            android:background="@drawable/bkg_style_circle"
            android:src="@drawable/ic_light_wei"
            app:tint="@color/weightLight"
            />
        <ImageView
            android:id="@+id/img_ic_normal_wei"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="15dp"
            android:layout_marginEnd="4dp"
            android:backgroundTint="@color/white"
            android:background="@drawable/bkg_style_circle"
            android:src="@drawable/ic_normal_wei"
            app:tint="@color/weightNormal"
            />
        <ImageView
            android:id="@+id/img_ic_heavy_wei"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="15dp"
            android:layout_marginEnd="4dp"
            android:backgroundTint="@color/white"
            android:background="@drawable/bkg_style_circle"
            android:src="@drawable/ic_heavy_wei"
            app:tint="@color/weightHeavy"
            />

    </LinearLayout>

    <TextView
        android:id="@+id/text_Number_Range"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Number Ranger"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_marginTop="35dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/line_list_weights" />

    <com.google.android.material.slider.RangeSlider
        android:id="@+id/rang_slider_rangPoke"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toTopOf="@id/text_Number_Range"
        app:layout_constraintStart_toStartOf="parent"
        app:tickColor="@android:color/transparent"
        app:trackColorActive="@color/typePsychic"
        app:trackColorInactive="@color/backgroudInput"
        app:thumbColor="@color/typePsychic"
        android:valueFrom="0.0"
        android:valueTo="100.0"
        android:stepSize="1.0"
        app:values="@array/initial_slider_values"
        />

    <Button
        android:id="@+id/button"
        android:layout_width="160dp"
        android:layout_height="60dp"
        android:backgroundTint="@color/backgroudInput"
        android:text="Reset"
        android:textColor="@color/textGray"
        android:textSize="16sp"
        android:textStyle="normal"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rang_slider_rangPoke" />

    <Button
        android:layout_width="160dp"
        android:layout_height="60dp"
        android:backgroundTint="@color/typePsychic"
        android:text="Apply"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="normal"
        app:layout_constraintBottom_toBottomOf="@+id/button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/button"
        app:layout_constraintTop_toTopOf="@+id/button" />
</androidx.constraintlayout.widget.ConstraintLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>